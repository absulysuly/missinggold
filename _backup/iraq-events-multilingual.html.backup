            background: linear-gradient(45deg, #6a11cb, #2575fc);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            position: relative;
            overflow: hidden;
        }
        
        .event-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1" fill="white" opacity="0.1"/><circle cx="40" cy="80" r="1.5" fill="white" opacity="0.1"/></svg>');
            animation: float 8s ease-in-out infinite;
        }
        
        .event-content {
            padding: 25px;
            position: relative;
            z-index: 2;
        }
        
        .event-title {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #2d3748;
            font-weight: 700;
            line-height: 1.3;
        }
        
        .event-date {
            color: #718096;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            font-weight: 500;
        }
        
        .event-date i {
            margin-right: 10px;
            color: #4299e1;
        }
        
        .rtl .event-date i {
            margin-right: 0;
            margin-left: 10px;
        }
        
        .event-desc {
            color: #4a5568;
            line-height: 1.6;
            margin-bottom: 25px;
        }
        
        /* Filters */
        .filters {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
            margin: 40px 0;
        }
        
        .filter-btn {
            padding: 12px 25px;
            background: white;
            border: 2px solid #e2e8f0;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            position: relative;
            overflow: hidden;
        }
        
        .filter-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(106, 17, 203, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .filter-btn:hover::before {
            left: 100%;
        }
        
        .filter-btn:hover, .filter-btn.active {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            color: white;
            border-color: #6a11cb;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(106, 17, 203, 0.3);
        }
        
        /* Months Grid */
        .months-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 15px;
            margin: 30px 0 50px;
        }
        
        .month-btn {
            padding: 15px 10px;
            text-align: center;
            background: white;
            border: 2px solid #e2e8f0;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            position: relative;
            overflow: hidden;
        }
        
        .month-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(37, 117, 252, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .month-btn:hover::before {
            left: 100%;
        }
        
        .month-btn:hover, .month-btn.active {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            color: white;
            border-color: #2575fc;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(37, 117, 252, 0.3);
        }
        
        /* Footer */
        footer {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            color: white;
            padding: 60px 0 30px;
            margin-top: 80px;
            position: relative;
        }
        
        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(to right, #CE1126 33.33%, #FFFFFF 33.33%, #FFFFFF 66.66%, #007A3D 66.66%);
        }
        
        .footer-content {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 40px;
        }
        
        .footer-section {
            flex: 1;
            min-width: 250px;
            margin-bottom: 30px;
        }
        
        .footer-section h3 {
            margin-bottom: 25px;
            font-size: 1.4rem;
            font-weight: 700;
            color: #FFD700;
        }
        
        .footer-section p {
            line-height: 1.7;
            color: #cbd5e0;
        }
        
        .footer-section .social-links {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }
        
        .footer-section .social-links i {
            font-size: 1.5rem;
            color: #cbd5e0;
            transition: all 0.3s ease;
        }
        
        .footer-section .social-links i:hover {
            color: #FFD700;
            transform: translateY(-3px);
        }
        
        .copyright {
            text-align: center;
            padding-top: 30px;
            margin-top: 30px;
            border-top: 1px solid #4a5568;
            color: #cbd5e0;
            font-size: 14px;
        }
        
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(5px);
        }
        
        .modal-content {
            background: white;
            border-radius: 20px;
            width: 90%;
            max-width: 600px;
            padding: 40px;
            position: relative;
            max-height: 85vh;
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: modalAppear 0.3s ease;
        }
        
        @keyframes modalAppear {
            from {
                opacity: 0;
                transform: scale(0.8) translateY(-50px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }
        
        .close-modal {
            position: absolute;
            top: 20px;
            right: 25px;
            font-size: 28px;
            cursor: pointer;
            color: #718096;
            transition: all 0.3s ease;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: #f7fafc;
        }
        
        .close-modal:hover {
            color: #e53e3e;
            background: #fed7d7;
            transform: scale(1.1);
        }
        
        .rtl .close-modal {
            right: auto;
            left: 25px;
        }
        
        /* Form Styles */
        .event-form {
            display: grid;
            gap: 25px;
        }
        
        .form-group {
            display: flex;
            flex-direction: column;
        }
        
        .form-group label {
            margin-bottom: 10px;
            font-weight: 600;
            color: #2d3748;
            font-size: 16px;
        }
        
        .form-group input, 
        .form-group textarea, 
        .form-group select {
            padding: 15px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #fafafa;
        }
        
        .form-group input:focus, 
        .form-group textarea:focus, 
        .form-group select:focus {
            outline: none;
            border-color: #6a11cb;
            background: white;
            box-shadow: 0 0 0 3px rgba(106, 17, 203, 0.1);
        }
        
        .form-group textarea {
            min-height: 120px;
            resize: vertical;
        }
        
        .upload-btn {
            display: inline-block;
            padding: 15px 25px;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            color: white;
            border-radius: 12px;
            cursor: pointer;
            text-align: center;
            margin-top: 10px;
            transition: all 0.3s ease;
            font-weight: 600;
        }
        
        .upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(106, 17, 203, 0.3);
        }
        
        .upload-btn i {
            margin-right: 10px;
        }
        
        .rtl .upload-btn i {
            margin-right: 0;
            margin-left: 10px;
        }
        
        /* Animations */
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .slide-in {
            animation: slideIn 0.6s ease forwards;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .events-grid {
                grid-template-columns: 1fr;
            }
            
            .months-grid {
                grid-template-columns: repeat(3, 1fr);
            }
            
            .header-content {
                flex-direction: column;
                gap: 20px;
            }
            
            .hero h1 {
                font-size: 2.5rem;
            }
            
            .hero p {
                font-size: 1.1rem;
            }
            
            .btn {
                margin: 10px 5px;
                padding: 12px 25px;
            }
            
            .footer-content {
                flex-direction: column;
                text-align: center;
            }
            
            .language-selector {
                justify-content: center;
            }
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 0 15px;
            }
            
            .hero {
                padding: 60px 0;
            }
            
            .hero h1 {
                font-size: 2rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .modal-content {
                padding: 25px;
                margin: 20px;
            }
        }
        
        /* Enhanced RTL Support */
        .rtl .events-grid {
            direction: rtl;
        }
        
        .rtl .filters {
            direction: rtl;
        }
        
        .rtl .months-grid {
            direction: rtl;
        }
        
        .rtl .footer-content {
            direction: rtl;
        }
        
        /* Kurdistan Region Specific Colors */
        .kurdistan-accent {
            background: linear-gradient(45deg, #FFD700, #FF0000, #FFFFFF, #00FF00);
        }
        
        /* Iraq-specific cultural elements */
        .mesopotamian-pattern {
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23FFD700' fill-opacity='0.1'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }
    </style>
</head>
